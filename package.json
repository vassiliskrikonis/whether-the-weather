{
  "name": "weather",
  "version": "2.0.0",
  "description": "a simple weather app with a twist",
  "devDependencies": {
    "cypress": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": ">=1.10.0",
    "prettier": "^1.17.0"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "scripts": {
    "dev": "parcel index.html",
    "dev-https": "parcel index.html --https",
    "build": "parcel build index.html",
    "deploy": "surge dist --domain https://vassiliskrikonis-weather.surge.sh/"
  },
  "author": "Vassilis Krikonis",
  "dependencies": {
    "assets": "^3.0.0",
    "axios": "^0.18.0",
    "luxon": "^1.3.1",
    "yup": "^0.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
