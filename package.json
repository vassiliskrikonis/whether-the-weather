{
  "name": "weather",
  "version": "3.0.0",
  "description": "a simple weather app with a twist",
  "devDependencies": {
    "cypress": "^3.8.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": ">=1.12.4",
    "parcel-plugin-sw-cache": "^0.3.1",
    "prettier": "^1.19.1",
    "start-server-and-test": "^1.10.6"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "scripts": {
    "dev": "parcel -p $PORT index.html",
    "dev-local": "parcel index.html",
    "dev-https": "parcel index.html --https",
    "build": "parcel build index.html -d ./public",
    "deploy": "surge ./public --domain https://vassiliskrikonis-weather.surge.sh/",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev-local :1234 cy:run"
  },
  "author": "Vassilis Krikonis",
  "dependencies": {
    "assets": "^3.0.1",
    "axios": "^0.21.1",
    "css": "^2.2.4",
    "luxon": "^1.28.1",
    "react": "^16.12.0",
    "react-animation": "^1.2.2",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1",
    "yup": "^0.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "cache": {
    "globPatterns": [
      "**/*.{html,js,css,jpg,png,gif,svg,eot,ttf,woff,woff2}"
    ],
    "runtimeCaching": [
      {
        "urlPattern": [
          "^https://fonts\\.gstatic\\.com"
        ],
        "handler": "CacheFirst",
        "options": {
          "cacheName": "google-fonts-webfonts",
          "expiration": {
            "maxAgeSeconds": 31536000,
            "maxEntries": 30
          }
        }
      }
    ]
  }
}
