{
  "name": "weather",
  "version": "2.0.0",
  "description": "a simple weather app with a twist",
  "devDependencies": {
    "cypress": "^3.8.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-cypress": "^2.8.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": ">=1.12.4",
    "prettier": "^1.19.1",
    "start-server-and-test": "^1.10.6"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "scripts": {
    "dev": "parcel index.html",
    "dev-https": "parcel index.html --https",
    "build": "parcel build index.html",
    "deploy": "surge dist --domain https://vassiliskrikonis-weather.surge.sh/",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev :1234 cy:run"
  },
  "author": "Vassilis Krikonis",
  "dependencies": {
    "assets": "^3.0.1",
    "axios": "^0.19.0",
    "luxon": "^1.21.3",
    "yup": "^0.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
